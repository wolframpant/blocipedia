%h1 Edit Wiki
- if @wiki.personal
  %h3 Personal
= link_to 'Collaborators', collaborators_path{:id}, class: 'btn btn-success'
%br
= form_for @wiki do |f| 
  = f.label :title
  %br
  = f.text_field :title, cols: 40
  %br
  = f.label :body
  %br
  = f.text_area :body, cols: 80, rows: 20
  %br
  %p Select collaborators:
  = f.collection_check_boxes :user_ids, User.all, :id, :email
  %br
  = f.submit 'Save and Parse'
