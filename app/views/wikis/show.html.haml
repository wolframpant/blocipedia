.container
  %br
  %br

  .row
    .col-md-7
      .row
        .col-md-4
          - if @wiki.personal
            = link_to "Back to Index", private_wiki_index_path
          - else  
            = link_to "Back to Index", wikis_path
          %br
          
        .col-md-4
          - if policy(@wiki).update?
            = link_to 'Edit', edit_wiki_path, class: 'btn btn-success'
            %br
        %br
        %br
        
      #wikibody
        %h1= @wiki.title
        - if @wiki.personal
          %h3 Private

        %h5 
          Created 
          = time_ago_in_words(@wiki.created_at)
          ago by
          = @wiki.creator.name

        = markdown(@wiki.body)
  
    .col-md-5
      - if policy(@wiki).update?
        .btn.btn-success#centerbtn
          = link_to "Add Image", new_image_path
        %br
        %br
          
      - if @wiki.images.exists?
        %h3 Images 
        .italic (click on the thumbnail to see a larger version)
        
        %br
        - @wiki.images.each do |i|
          .wikiimage
            = link_to image_tag(i.location.thumb.url), i
            %br
            = i.name
            %br
            - if policy(i).destroy?
              = link_to 'Delete', image_path(i), :method => :delete, data: {confirm: 'Do you want to delete this image?'}

