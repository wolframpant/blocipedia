@import "bootstrap-sprockets";
@import "bootstrap";
  
body {
  background-color: #f4dcae;
  color: #ECE2D0;
  background: url('<%= asset_path("titian.gif") %>');
  background-repeat: x y;
}

ul {
  list-style: none;
  font-size: 115%;
}

a {
  color: #C2EFB3;
}

.nav a:hover {
  color: #620031;  
}

a:hover {
  font-weight: bold;
  border: none;
  color: #C2EFB3;
  text-decoration: none;
}

.btn-primary {
  background-color: #ECE2D0;
  color: #c60c69;
}

.btn-primary:hover {
  background-color: #97ABB1;
  color: #c60c69;
}

.glyphicon:hover {
  color: #c60c69;
}

.glyphicon a:hover {
  color: #c60c69;
}

.notices {
  background-color: #ECE2D0;
  color: black;
  font-size: 125%;
  margin: 5px 5px 5px 25px;
}

.pull-right {
  margin-top: 10px;
}

.pull-right a:hover {
  color: #BFB5AF;
}

form {
  color: #ECE2D0;
}

input, textarea {
  color: black;
}