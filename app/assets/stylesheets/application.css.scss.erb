@import "bootstrap-sprockets";
@import "bootstrap";
  
body {
  background-color: #040926;
  color: white;
  font-family: "Philosopher", cursive;
  /* background: url('<%= asset_path("tumblr2.jpg") %>'); */
}

ul {
  list-style: none;
  font-size: 150%;
}

a {
  color: #6EDBA1;
}

.nav a:hover {
  color: #6EDBA1; 
  font-weight: bold;
}

a:hover {
  font-weight: bold;
  border: none;
  color: #6EDBA1;
  text-decoration: none;
  font-weight: bold;
}

.btn-primary {
  background-color: #5B507A;
  color: #6EDBA1;
}

.btn-primary:hover {
  background-color: #5B507A;
  color: #6EDBA1;
}

.glyphicon:hover {
  color: #6EDBA1;
}

.glyphicon a:hover {
  color: #6EDBA1;
}

.notices {
  background-color: white;
  color: black;
  font-size: 100%;
  margin: 5px 5px 5px 25px;
  padding: 2px;
}

.pull-right {
  margin-top: 10px;
}

.pull-right a:hover {
  color: #6EDBA1;
}

form {
  color: white;
}

input, textarea {
  color: black;
}