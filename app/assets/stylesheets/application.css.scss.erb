@import "bootstrap-sprockets";
@import "bootstrap";
  
body {
  background-color: white;
  color: #40376B;
  background: url('<%= asset_path("tumblr2.jpg") %>');
}

ul {
  list-style: none;
}

.nav a {
  font-size: 150%;
}

a {
  color: #7202AE;
}

.nav a:hover {
  color: #7202AE;  
}

a:hover {
  font-weight: bold;
  border: none;
  color: #7202AE;
  text-decoration: none;
}

.btn-primary {
  background-color: #56E39F;
  color: #7202AE;
}

.btn-primary:hover {
  background-color: #8E8DBE;
  color: #7202AE;
}

.glyphicon:hover {
  color: #7202AE;
}

.glyphicon a:hover {
  color: #7202AE;
}

.notices {
  background-color: #56E39F;
  color: #090C02;
  font-size: 125%;
  margin: 5px 5px 5px 25px;
  padding: 10px;
}

.pull-right {
  margin-top: 10px;
}

.pull-right a:hover {
  color: #7202AE;
}

form {
  color: #40376B;
}

input, textarea {
  color: #090C02;
}