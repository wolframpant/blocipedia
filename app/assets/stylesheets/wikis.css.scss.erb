.huge {
  font-family: "Baskerville Old Face", serif;
  font-size: 150%;
}

.center {
  text-align: center;
}

.wikiimage {
  float: right;
  text-align: center;
  padding: 5px;
  margin: 5px;
  border: outset;
  border-width: 3px;
  border-color: #700548;
  background-image: url('<%= asset_path("silver-white-pattern.jpg") %>');
}

#wikibody {
  width: 100%;
  border-style: outset;
  border-width: 10px;
  padding: 10px;
  border-color: #700548;
  background-image: url('<%= asset_path("silver-white-pattern.jpg") %>');
}

.italic {
  font-style: italic;
}