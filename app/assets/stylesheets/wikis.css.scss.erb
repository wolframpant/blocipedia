.center {
  text-align: center;
}

.wikiimage {
  float: right;
  text-align: center;
  padding: 5px;
  margin: 5px;
  border: outset;
  border-width: 3px;
  border-color: #EA7AF4;
  color: #A456AB;
  background-image: url('<%= asset_path("silver-white-pattern.jpg") %>');
}

.wikiimage a {
  color: #A456AB;
}

.largerlink a {
  font-size: 150%;
}

#wikibody {
  width: 100%;
  border-style: outset;
  border-width: 10px;
  padding: 10px;
  border-color: #EA7AF4;
  color: #A456AB;
  background-image: url('<%= asset_path("silver-white-pattern.jpg") %>');
}

#wikibody p {
  font-size: 125%;
}

.italic {
  font-style: italic;
}

/* list of potential collaborators should be black */
.blackform option {
  color: black;
}